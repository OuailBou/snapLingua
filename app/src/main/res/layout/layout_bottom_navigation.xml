<?xml version="1.0" encoding="utf-8"?>
<com.example.snap.ui.components.BottomNavigationComponent
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:gravity="center"
    android:elevation="8dp">

    <!-- Botón Texto -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nav_texto"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/texto"
        app:icon="@drawable/ic_keyboard"
        app:iconGravity="top"
        app:iconSize="24dp"
        app:iconPadding="4dp"
        android:textColor="#424242"
        app:iconTint="#424242"
        android:textSize="11sp"/>

    <!-- Botón Cámara -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nav_camara"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/camara"
        app:icon="@drawable/ic_camera"
        app:iconGravity="top"
        app:iconSize="24dp"
        app:iconPadding="4dp"
        android:textColor="#424242"
        app:iconTint="#424242"
        android:textSize="11sp"/>

    <!-- Botón Audio -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nav_audio"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/audio"
        app:icon="@drawable/ic_microphone"
        app:iconGravity="top"
        app:iconSize="24dp"
        app:iconPadding="4dp"
        android:textColor="#424242"
        app:iconTint="#424242"
        android:textSize="11sp"/>

    <!-- Botón Usuario -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nav_usuario"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/usuario"
        app:icon="@drawable/ic_user"
        app:iconGravity="top"
        app:iconSize="24dp"
        app:iconPadding="4dp"
        android:textColor="#424242"
        app:iconTint="#424242"
        android:textSize="11sp"/>

</com.example.snap.ui.components.BottomNavigationComponent>
