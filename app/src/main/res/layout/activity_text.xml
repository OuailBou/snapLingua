<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".TextActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="85sp"
        android:background="#6200EE"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/appName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Language Selectors -->
    <com.example.snap.ui.components.LanguageSelector
        android:id="@+id/languageSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"

        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/languageSelector" />

    <!-- Main Content Area -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Input Area -->
            <LinearLayout
                android:id="@+id/inputCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="2dp">
                android:background="@drawable/bg_outline_box">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/etInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/placeholder_input"
                        android:textColor="#757575"
                        android:textSize="24sp"
                        android:background="@null"
                        android:padding="8dp"
                        android:inputType="textMultiLine|textCapSentences"
                        android:imeOptions="actionDone"
                        android:maxLines="10"
                        android:minLines="3"
                        android:gravity="top|start"
                        android:scrollHorizontally="false"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.03"
                        android:includeFontPadding="false"
                        />

                    <ImageView
                        android:id="@+id/btnTranslate"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="Traducir"
                        android:src="@android:drawable/ic_media_play"
                        android:rotation="0"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="#6200EE"/>

                    <ImageView
                        android:id="@+id/btnClear"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Clear text"
                        android:src="@android:drawable/ic_delete"
                        android:padding="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Output Area -->
            <LinearLayout
                android:id="@+id/outputCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginTop="16dp">
                android:background="@drawable/bg_outline_box">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvOutput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/placeholder_output"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:padding="8dp"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/tvOutput"
                        app:layout_constraintEnd_toEndOf="@id/tvOutput"
                        app:layout_constraintStart_toStartOf="@id/tvOutput"
                        app:layout_constraintTop_toTopOf="@id/tvOutput" />

                    <ImageView
                        android:id="@+id/btnVolume"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Speak translation"
                        android:src="@android:drawable/ic_lock_silent_mode_off"
                        android:padding="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:id="@+id/btnCopy"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Copy"
                        android:src="@drawable/ic_copy"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"/>

                    <ImageView
                        android:id="@+id/btnStar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Add to favorites"
                        android:src="@android:drawable/btn_star"
                        android:padding="4dp"/>

                </LinearLayout>
            </LinearLayout>

            <!-- Quick Translations -->
            <TextView
                android:id="@+id/tvQuickTranslations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/traducciones_rapidas"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Chips -->
            <LinearLayout
                android:id="@+id/chipContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/chip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saludo"
                    android:layout_marginEnd="8dp"
                    style="?android:attr/buttonBarButtonStyle"/>

                <Button
                    android:id="@+id/chip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pregunta"
                    android:layout_marginEnd="8dp"
                    style="?android:attr/buttonBarButtonStyle"/>

                <Button
                    android:id="@+id/chip3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agradecimiento"
                    style="?android:attr/buttonBarButtonStyle"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/layout_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>