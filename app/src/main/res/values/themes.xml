<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- BASE THEME -->
    <style name="Base.Theme.Practica" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Surface -->
        <item name="android:colorBackground">#F5F5F5</item>

        <!-- Default widgets -->
        <item name="materialCardViewStyle">@style/Widget.Practica.Card</item>
        <item name="toolbarStyle">@style/Widget.Practica.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.Practica.BottomNav</item>
    </style>

    <style name="Theme.Practica" parent="Base.Theme.Practica"/>

    <!-- TOOLBAR -->
    <style name="Widget.Practica.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextAppearance.Practica.ToolbarTitle</item>
    </style>

    <!-- CARD -->
    <style name="Widget.Practica.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <!-- BOTTOM NAV -->
    <style name="Widget.Practica.BottomNav"
        parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@color/purple_500</item>
        <item name="itemTextColor">@color/purple_500</item>
    </style>

    <!-- TEXT -->
    <style name="TextAppearance.Practica.ToolbarTitle"
        parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Practica.SectionTitle"
        parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Practica.Body"
        parent="TextAppearance.MaterialComponents.Body1"/>

    <style name="TextAppearance.Practica.BodySecondary"
        parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
</resources>